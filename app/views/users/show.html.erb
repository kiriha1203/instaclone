<div class="profile_box">
  <div class="profile_top">
    <div class="profile_image">
      <%#= image_tag(@user.image, class: 'show_image' ) if @user.image.attached? %>
     </div>
     <div class="profile_name_count_tweet">
       <p><%= @user.name %></p>
       <p><%= @user.email %></p>
       <p>投稿 x件</p>
     </div>
    <div class="profile_edit">
      <%= link_to '編集', edit_user_path, class: 'buttons' %>
    </div>
  </div>

  <div class="profile_bottom">
    <% unless @user.introduction.nil? %>
      <p><%= simple_format(h(@user.introduction), {}, sanitize: false, wrapper_tag: "div") %></p>
    <% end %>
  </div>
</div>


